<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>A'DINGO</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add this line in the <head> section of your HTML -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.6.3/nouislider.min.css">

    <style>
    /* Custom CSS */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Replace with your preferred font */
    }

    /* Adjusted color and font weight for the adjust-criteria text */
    .adjust-criteria {
        color: #FFC700; /* Changed color to orange */
        font-weight: bold; /* Added bold font weight */
        text-transform: capitalize;
    }

    /* Adjusted color and font weight for the reorder-text text */
    .reorder-text {
        color: #FFC700; /* Grey */
        font-weight: bold; /* Added bold font weight */
        text-transform: capitalize;
    }

    /* Adjusted color and font weight for the styled images section */
    .styled-images-heading {
        color: #FFC700; /* Changed color to orange */
        font-weight: bold; /* Added bold font weight */
        text-transform: capitalize;
    }

    /* Adjusted color and font weight for the AI-Design Result Display heading */
    .ai-result-heading {
        color: #FFC700; /* Changed color to orange */
        font-weight: bold; /* Added bold font weight */
        text-transform: capitalize;
    }

    /* Adjust AI-Design Result Display position */
    #aiResultImage {
        width: 45%;
        margin-top: 20px;
        float: right; /* Aligns AI-Design Result Display to the right */
    }

    /* Adjusted color and font weight for the AI-Design Result Display */
    .ai-result-text {
        color: #FFC700; /* Changed color to orange */
        font-weight: bold; /* Added bold font weight */
    }

    /* Adjusted styled images section to display in a 2x2 grid */
    .image-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
    }

    .image-container img {
        width: 100%; /* Adjusted image width to fit the grid */
    }

    /* Ensures that the "Uploaded Photo" and "AI-Design Result Display" are aligned horizontally */
    .upload-ai-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px; /* Added margin for spacing */
    }

    /* Ensures that "Adjust Your Criteria" and "Styled Images" sections are aligned horizontally and have the same height */
    .criteria-styled-container {
        display: flex;
        align-items: flex-start; /* Ensures alignment at the top */
        margin-bottom: 20px; /* Added margin for spacing */
    }

    /* Adjusted styled images section to display in a 2x2 grid */
    .image-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
    }

    .image-container img {
        width: 100%; /* Adjusted image width to fit the grid */
    }

    @media (max-width: 768px) {
        #aiResultImage {
            width: 100%;
        }
    }
    h1 {
            color: #FFC700; /* Updated color to #FFC700 */
        }
</style>

</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">A'DINGO</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="text-center">
                    <p class="adjust-criteria">Adjust your criteria</p>
                    <div class="form-group">
                        <label for="budgetRange">Budget (in dollars):</label>
                        <div id="budgetSlider" class="slider"></div>
                        <output id="budgetValue">$0</output>
                    </div>
                    <div class="form-group">
                        <select id="style" class="form-control">
                            <option value="scandinavian">Scandinavian</option>
                            <option value="japanese">Japanese</option>
                            <option value="natural">Natural</option>
                            <option value="aegean">Aegean</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="timelineRange">Timeline (in <span id="timelineMonth">0</span> months):</label>
                        <div id="timelineSlider" class="slider"></div>
                        <output id="timelineValue">0 months</output>
                    </div>
                    <h4 class="text-center mb-4" style="color: #FFC700; font-weight: bold; text-transform: capitalize;">Uploaded photo</h4>
                    <img src="https://replicate.delivery/pbxt/JzqJT0IKIqr5ivqi5vnWeFctz52kTlhnBqR2OcK1NJYFsfYx/a-room-at-the-beach.jpeg" width="100%" height="auto" alt="Sample Image">
                    <div class="buttons-section">
                        <button id="btn_submit" class="btn btn-primary">Generate</button>
                        <button id="btn_clear" class="btn btn-secondary">Clear Image</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                 <div class="text-center" style="height: 100%;">
                    <h4 class="text-center mb-4 styled-images-heading">Styled Images</h4>
                    <div class="image-container">
                        <img src="/images/aegean_style.png" alt="aegean">
                        <img src="/images/scandi_style.png" alt="scandinavian">
                        <img src="/images/natural_style.png" alt="natural">
                        <img src="/images/japanese_style.png" alt="japanese">
                    </div>
                    <!-- AI Design Result Display section -->
                   <div class="position-relative text-center">
                     <h4 class="text-center mb-4 ai-result-heading">AI-Design Result Display</h4>
                     <img src="" id="aiResultImage" class="img-fluid mx-auto d-block" alt="AI Generated Image">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS and Custom Script -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.6.3/nouislider.min.js"></script>
    <script>
        // Define aiResultImage as a global variable
        let aiResultImage;

        // Initialize noUiSlider for budget range
        var budgetSlider = document.getElementById('budgetSlider');
        noUiSlider.create(budgetSlider, {
            start: [0, 10000], // Initial range values
            connect: true, // Connect handles with a line
            range: {
                'min': 0,
                'max': 20000
            },
            step: 1, // Set step size to 1
            pips: {
                mode: 'values',
                values: [0, 5000, 10000, 15000, 20000],
                density: 20
            }
        });

        // Initialize single-end noUiSlider for timeline range
        var timelineSlider = document.getElementById('timelineSlider');
        noUiSlider.create(timelineSlider, {
            start: 12, // Initial value
            connect: 'lower', // Connect only the lower handle
            range: {
                'min': 0,
                'max': 12 // Set maximum timeline to 12 months
            },
            step: 1 // Set step size to 1
        });


        /// Update timeline value based on slider change
        timelineSlider.noUiSlider.on('update', function(value) {
            var selectedMonths = Math.round(value);
            document.getElementById('timelineValue').textContent = selectedMonths + ' months';
            document.getElementById('timelineMonth').textContent = selectedMonths;
        });

        // Update budget value based on slider change
        budgetSlider.noUiSlider.on('update', function(values) {
            document.getElementById('budgetValue').textContent = '$' + values.join(' - $');
        });

        document.querySelectorAll('.image-container img').forEach(image => {
            image.addEventListener('mouseover', () => {
                document.querySelectorAll('.image-container img').forEach(img => {
                    if (img !== image) {
                        img.style.opacity = 0.3; // Dim other images
                    }
                });
                image.style.opacity = 1; // Highlight hovered image
            });

            image.addEventListener('mouseout', () => {
                document.querySelectorAll('.image-container img').forEach(img => {
                    img.style.opacity = 1; // Reset opacity for all images
                });
            });

            document.querySelectorAll('.image-container img').forEach(image => {
                image.addEventListener('click', () => {                   
                    console.log(image.alt)
                    document.getElementById('style').value = image.alt //  Update style text field with selected style
                   
                });
            });
        });


        // Assuming there's a condition to determine whether to display styled images or AI result image
        var displayStyledImages = true; // Set to true to display styled images, false to display AI result image

        if (displayStyledImages) {
            // Hide AI result image
            document.getElementById('aiResultImage').style.display = 'none';
        } else {
            // Hide styled images
            document.querySelector('.image-container').style.display = 'none';
        }

        async function generateImage(style) {
            try {
                const response = await fetch('/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'generate',
                        style,
                        budget: budgetSlider.noUiSlider.get(),
                        timeline: timelineSlider.noUiSlider.get()
                    })
                });
                const data = await response.json();
                console.log(data)
                // Assuming data.imgurl is an array of image URLs
                const image = data.imgurl || undefined;
                console.log('image:', image)
                if (image) {
                    aiResultImage = image; // Assign image URL to aiResultImage variable
                    document.getElementById('aiResultImage').src = image;
                } else {
                    document.getElementById('aiResultImage').style.display = 'none';
                }
                console.log("aiResultImage: ", aiResultImage)
                // Display Love It button if aiResultImage has a value
                if (aiResultImage) {
                    const loveItButton = document.createElement('a');
                    loveItButton.href = '/report?image=' + encodeURIComponent(aiResultImage);
                    loveItButton.className = 'btn btn-primary position-absolute bottom-0 end-0 m-3';
                    loveItButton.textContent = 'Love It';
                    document.querySelector('.position-relative').appendChild(loveItButton);
                }

            } catch (error) {
                console.error('Error generating image:', error);
            }
        }

        async function clearImage() {
            try {
                const response = await fetch('/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: 'clear'
                    }),
                });
                const data = await response.json();
                document.getElementById('aiResultImage').src = data.imgurl;
            } catch (error) {
                console.error('Error clearing image:', error);
            }
        }

        document.getElementById('btn_submit').addEventListener('click', function() {
            var selectedStyle = document.getElementById('style').value;
            clearImage();
            generateImage(selectedStyle);
        });

        document.getElementById('btn_clear').addEventListener('click', function() {
            clearImage();
            // Reset style, budget, and timeline values
            document.getElementById('style').value = '';
            budgetSlider.noUiSlider.reset();
            timelineSlider.noUiSlider.reset();
        });
    </script>

</body>
</html>
