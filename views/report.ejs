<!-- report.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Love It Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .text-center {
            text-align: center;
        }

        .mt-5 {
            margin-top: 3rem !important;
        }

        .mt-4 {
            margin-top: 2.5rem !important;
        }

        .container {
            margin-top: 3rem;
        }

        h2 {
            color: orange; /* Updated color to orange */
            font-weight: bold;
            text-transform: capitalize;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        ul li {
            margin-bottom: 5px;
            color: #6c757d; /* Updated color to grey */
        }

        .position-relative {
            position: relative;
        }

        .img-fluid {
            max-width: 100%;
            height: auto;
        }

        .btn-orange {
            background-color: orange;
            color: white;
            font-weight: bold;
        }

        .purchase-report {
            color: orange;
            font-size: 24px;
            margin-bottom: 20px;
        }
        /* Adjusted color and font weight for the AI-Design Result Display heading */
        .ai-result-heading {
            color: #FFC700; /* Changed color to orange */
            font-weight: bold; /* Added bold font weight */
            text-transform: capitalize;
        }
       
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <!-- Upper section - Materials -->
                <h2 class="text-center" style="color:#FFC700">Materials</h2>
                <ul>
                    <!-- Loop through materials -->
                    <% materials.forEach(material => { %>
                        <li><%= material.name %></li>
                    <% }); %>
                </ul>
            </div>
            <div class="col-md-6">
                <!-- AI Design Result Display section -->
                <div class="position-relative">
                    <h2 class="text-center mb-4 ai-result-heading" >AI-Design Result Display</h2>
                    <div class="position-relative">
                        <img src="<%= aiResultImageURL %>" class="img-fluid mx-auto d-block" alt="AI Generated Image">
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-6">
                <!-- Lower section - Contractors & Suppliers -->
                <h2 class="text-center" style="color:#FFC700">Contractors & Suppliers</h2>
                <ul>
                    <!-- Loop through contractors/suppliers -->
                    <% suppliers.forEach(supplier => { %>
                        <li><%= supplier.name %></li>
                    <% }); %>
                </ul>
            </div>
            <div class="col-md-6">
                <!-- Total Cost -->
                <h2 class="text-center" style="color:#FFC700">Total Cost:</h2>
                <p class="text-center">$ How Much Dollars</p>
                <!-- Button section -->
                <div class="text-center mt-4">
                    <h2 class="purchase-report" style="color:#FFC700">Purchase Report</h2>
                    <a href="/purchase-report" class="btn btn-primary" style="background-color:#FFC700">$19.99</a>
                     <!-- Back button -->
                    <button class="btn btn-secondary back-btn" style="background-color:#FFC700" onclick="goBack()">Back</button>
                </div>
            </div>
        </div>
    </div>

     <!-- JavaScript to go back to the previous page -->
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
